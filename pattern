# pattern 1
n=int(input())
for i in range(1,n+1):
    for j in range(1,n+1):
        print("*",end='')
        print()
        
        # pattern 2
        n=int(input())
for i in range(1,n+1):
    for j in range(1,n+1):
        print(i,end='')
    print('')        
    
    # pattern 3
    n=int(input())
for i in range(1,n+1):
    for j in range(1,i+1):
