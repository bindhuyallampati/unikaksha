    #pattern 10
    n=int(input())
t=1
for i in range(n-1,-1,-1):
    for j in range(i):
        print(" ",end="")
    for j in range(t):
        print("*",end="")
    t+=2
    print()
t=t-4
for i in range(1,n):
    for j in range(i):
        print(" ",end="")
    for j in range(t):
        print("*",end="")
    t-=2
    print()
